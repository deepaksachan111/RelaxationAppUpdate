        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout_meditation"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView

                android:id="@+id/iv_meditation"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@mipmap/alarm_clock_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_meditation"
                android:layout_gravity="center"
                android:text="Meditation"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_breath"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_breath_home_frage"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@mipmap/human_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_breath_home_frage"
                android:layout_gravity="center"
                android:text="Breathe"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </RelativeLayout>


</FrameLayout>
