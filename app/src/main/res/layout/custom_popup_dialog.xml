<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

 android:background="#fff"
    android:layout_height="wrap_content">


    <LinearLayout

        android:background="#443321"
        android:id="@+id/b"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <TextView
            android:textSize="22sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="Visit On"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/b"
        android:orientation="horizontal"
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <LinearLayout
            android:id="@+id/li_custum_dialoge_event"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/circle_shape_dialoge"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/event_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/li_custum_dialoge_books"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/circle_shape_dialoge"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/books_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/li_custum_dialoge_audio"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/circle_shape_dialoge"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/audio_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:textColor="#fff"
        android:padding="10dp"
        android:background="@drawable/circle_shape_dialoge"
        android:autoLink="none"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/text_dialog"
        android:layout_below="@+id/a"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />


</RelativeLayout>