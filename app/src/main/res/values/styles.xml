<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="splash_theme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        ...
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StyledDialog" parent="@android:style/Theme.Panel">
        <item name="android:background">#CD7F32</item>
        <item name="android:textColor">#fff</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="calendar_event_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FF6600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bounce</item>
        <item name="android:windowExitAnimation">@anim/bottom_to_top</item>
    </style>

    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>



</resources>
